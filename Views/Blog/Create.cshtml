@model hjemmeside2.Models.Entities.BlogPost

    <form asp-action="Create" asp-controller="Blog" class="form-horizontal">
        <h2>Lav en ny blog</h2>
        <hr />
        <div class="form-group">   
        <label asp-for="Title" class="col-md-1 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Title" class="form-control" placeholder="Titlen pÃ¥ bloggen"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">   
        <label asp-for="Author" class="col-md-1 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Author" class="form-control" placeholder="Forfatter"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
        <label asp-for="Body" class="col-md-1 control-label"></label>
            <div class="col-md-8">
                <textarea rows="10" asp-for="Body" class="form-control" placeholder="Indhold"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
                <br> 
                <button class="btn btn-warning" asp-controller="Blog" asp-action="">Fortryd</button>
                <button type="submit" class="btn btn-success">Create Post</button>
            </div>
        </div>       
    </form>

